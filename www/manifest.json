{
  "manifest_version": 2,
 
  "name": "RasPi-Cast",
  "description": "This extension will cast the current youtube video to your Raspberry Pi.",
  "version": "0.1",
 
  "browser_action": {
   "default_icon": "images/icon.png",
   "default_popup": "popup.html"
  },
  
  "permissions": [
   "activeTab",
   "storage"
   ],
   
   "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}